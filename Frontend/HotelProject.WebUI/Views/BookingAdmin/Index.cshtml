@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}


<div class="card-title">
    <h4>Rezervasyonlar</h4>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>CheckIn</th>
                <th>CheckOut</th>
                <th>Status</th>
                <th>Onayla</th>
                <th>İptal Et</th>  
                <th>Beklet</th>
                <th>Güncelle</th>
                <th>Detaylar</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td>@(((DateTime)item.ChecckIn).ToString("dd-MMM-yyyy"))</td>
                    <td>@item.ChecckOut</td>
                    <td>
                        <span class="badge badge-primary px-2">@item.Status</span>
                    </td>
                    <td><a href="/BookingAdmin/ApprovedReservation/@item.BookingID" class="btn mb-1 btn-rounded btn-outline-primary">Onayla</a> </td>
                    <td><a href="/Booking/UpdateBooking/@item.BookingID" class="btn mb-1 btn-rounded btn-outline-danger">İptal Et</a></td>
                    <td><a href="/Booking/UpdateBooking/@item.BookingID" class="btn mb-1 btn-rounded btn-outline-warning">Beklet</a></td>
                    <td><a href="/Booking/UpdateBooking/@item.BookingID" class="btn mb-1 btn-rounded btn-outline-info">Güncelle</a></td>
                    <td><a href="/Booking/UpdateBooking/@item.BookingID" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>

                </tr>
            }


        </tbody>
    </table>
</div>
