 @model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="ServideID" />
    <label>Servis ikon linki</label>
    <input type="text" asp-for="ServicesIcon" class="form-control" />
    <span asp-validation-for="ServicesIcon" class="text-info"></span>
    <br />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-info"></span>
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-info"></span>
    <br />

    <button class="btn btn-Success">Personeli Güncelle</button>
</form>